<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Hostfully API Test Suite" parallel="classes" thread-count="2">

    <test name="Positive Tests">
        <groups>
            <run>
                <include name="positive"/>
            </run>
        </groups>
        <classes>
            <class name="tests.PropertyTests"/>
            <class name="tests.BookingTests"/>
        </classes>
    </test>

    <test name="Negative Tests">
        <groups>
            <run>
                <include name="negative"/>
            </run>
        </groups>
        <classes>
            <class name="tests.PropertyTests"/>
            <class name="tests.BookingTests"/>
        </classes>
    </test>

    <test name="Regression Tests">
        <groups>
            <run>
                <include name="positive"/>
                <include name="negative"/>
            </run>
        </groups>
        <classes>
            <class name="tests.PropertyTests"/>
            <class name="tests.BookingTests"/>
        </classes>
    </test>

</suite>
